{
  "name": "web3w",
  "version": "0.2.28",
  "description": "Observable Store for Web3 Browser with ethers contracts integration",
  "main": "dist/amd/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist/"
  ],
  "author": "Ronan Sandford",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:wighawag/web3w.git"
  },
  "keywords": [
    "web3",
    "wallet",
    "ethereum",
    "ethers.js"
  ],
  "peerDependencies": {
    "@ethersproject/bignumber": "^5.0.0",
    "@ethersproject/contracts": "^5.0.0",
    "@ethersproject/providers": "^5.0.0"
  },
  "devDependencies": {
    "@ethersproject/bignumber": "^5.0.6",
    "@ethersproject/contracts": "^5.0.3",
    "@ethersproject/providers": "^5.0.6",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "terser": "^5.2.1",
    "terser-folder": "^2.0.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "prepare": "node .setup.js && node fix_ethers_modules.js && npm run lint && npm run build",
    "dev": "tsc -w -p tsconfig.json",
    "build:esm": "rimraf dist/esm && tsc -p tsconfig.json",
    "build:amd": "rimraf dist/amd && tsc -p tsconfig-amd.json && terser-folder dist/amd -e -x .js -o dist/amd --config-file terser.json",
    "build:umd": "rimraf dist/umd && tsc -p tsconfig-umd.json && terser-folder dist/umd -e -x .js -o dist/umd --config-file terser.json",
    "build": "run-s build:esm build:amd build:umd",
    "lint": "eslint src/**/*.{js,ts,tsx} --quiet --fix"
  },
  "dependencies": {
    "named-logs": "^0.0.9"
  }
}
